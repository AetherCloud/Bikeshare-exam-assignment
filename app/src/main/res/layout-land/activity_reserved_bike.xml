<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificBike.ReservedBikeActivity"
    android:id="@+id/reserved_bike_BG"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserved_bike_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/reserveBikeButton"
        android:text="End my ride"
        android:background="@color/colorEndRide"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="endRide"
        android:textSize="44dp"
        android:textColor="@android:color/white"
        tools:ignore="OnClick" />
</RelativeLayout>