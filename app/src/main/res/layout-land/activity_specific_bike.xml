<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificBike.SpecificBikeActivity"
    android:orientation="horizontal"
    android:background="@color/colorStandardBG"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bikeImage"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@id/bikeImage"
        android:id="@+id/payments_text"
        android:textSize="22dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payments_recycler_view"
        android:textSize="12sp"
        android:layout_alignRight="@id/bikeImage"
        android:layout_below="@id/payments_text"
        android:layout_centerHorizontal="true"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>