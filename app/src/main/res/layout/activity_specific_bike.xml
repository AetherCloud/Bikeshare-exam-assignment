<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificBike.SpecificBikeActivity"
    android:orientation="vertical"
    android:background="@color/colorStandardBG"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bikeImage"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:layout_marginTop="20dp"
        android:layout_below="@id/bikeImage"
        android:id="@+id/payments_text"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payments_recycler_view"
        android:textSize="12sp"
        android:layout_below="@id/payments_text"
        android:layout_centerHorizontal="true"
        >
    </android.support.v7.widget.RecyclerView>

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/specificBikeFragment"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--/>-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/reserveBikeButton"
        android:text="Rent this bike"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="reserveBike"
        android:textSize="44dp"
        android:textColor="@android:color/white"
        tools:ignore="OnClick" />


</RelativeLayout>